    "\n",
    "southern_demand = [\n",
    "    [1, 1, 1, \"South\", 6696, -2.02],\n",
    "    [1, 1, 2, \"South\", 9118, -2.34],\n",
    "    [1, 1, 3, \"South\", 12132, -2.90],\n",
